{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Errors on form data: </strong> {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/each}}

<div class="md-col-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>New Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="post">
        <div class="nes-field is-inline">
          <input type="text" name="title" class="nes-input is-success mb-3" placeholder="Title" autofocus>
        </div>
        <div class="nes-field is-inline">
          <textarea name="description" class="nes-input is-success mb-3" placeholder="Description"></textarea>
        </div>
        <div class="d-grid gap-2">
          <button class="nes-btn is-success" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>