<div class="row">
  {{#each notes}}
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title d-flex justify-content-between align-items-center">
            {{title}} <a href="/notes/edit/{{_id}}"><i class="snes-logo"></i></a>
          </h4>
          <hr/>
          <p>{{description}}</p>
          <div class="">      
            <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST" class="d-grid gap-2">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="nes-btn is-error">
                Delete
              </button>
            </form>
          </div> 
        </div>
      </div>
    </div>
    {{else}}
      <section class="nes-container">
        <div class="message-list">
          <div class="message-center">
            <div class="nes-balloon from-left">
              <p> There are not notes yet.</p>
              <a href="/notes/add" class="nes-btn is-success">Create one!</a>
            </div>
          </div>
        </div>
      </section>
  {{/each}}
</div>